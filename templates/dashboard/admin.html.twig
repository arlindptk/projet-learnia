{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block stylesheets %}
<style>
    header { background: white; border-bottom: 1px solid #eee; padding: 15px 20px; display: flex; justify-content: space-between; align-items: center; }
    .role { font-size: 12px; padding: 4px 10px; border-radius: 4px; background: #333; color: white; }
    .nav-links { display: flex; gap: 15px; }
    .nav-links a { color: #888; font-size: 14px; }
    .nav-links a:hover { color: #333; }
    .main { padding: 40px 20px; text-align: center; }
    h1 { font-size: 24px; margin-bottom: 10px; }
    p { color: #666; }
</style>
{% endblock %}

{% block body %}
<header>
    <span class="role">Admin</span>
    <div class="nav-links">
        <a href="{{ path('app_dashboard') }}">Accueil</a>
        <a href="{{ path('app_logout') }}">Déconnexion</a>
    </div>
</header>

<div class="main">
    <h1>Administration</h1>
    <p>Espace réservé aux administrateurs.</p>
</div>
{% endblock %}
